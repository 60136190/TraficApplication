<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activities.SignDetailActivity"
    android:background="@color/dark_white">
    <TextView
        android:id="@+id/tv_signal_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:textColor="@color/purple_800"
        android:textSize="25dp"
        android:layout_margin="10dp"
        />
    <ImageView
        android:layout_marginTop="7dp"
        android:id="@+id/img_signal_detail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/tv_signal_name_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_code_signal_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_signal_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:textColor="@color/purple_800"
        android:textStyle="bold"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tv_describe_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_item_function"
        app:layout_constraintTop_toBottomOf="@id/tv_code_signal_detail"
        android:textStyle="italic"
        android:textColor="@color/grey"
        android:gravity="center"
        android:padding="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>