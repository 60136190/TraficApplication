<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.auth.UserActivity"
    android:background="@drawable/cycling"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user"
        android:layout_width="145dp"
        android:layout_height="145dp"
        app:layout_constraintTop_toBottomOf="@id/tv_user"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:src="@color/dark_white"
        android:background="@drawable/border_avt"
        />
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_edit_user"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/dark_white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="@string/userLogin"
        android:layout_marginTop="35dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="20dp"

        />
    <ImageView
        android:id="@+id/img_edit_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintTop_toTopOf="@id/tv_user"
        app:layout_constraintBottom_toBottomOf="@id/tv_user"
        app:layout_constraintRight_toLeftOf="@id/img_out_user"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/img_out_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_login_24"
        app:layout_constraintTop_toTopOf="@id/img_edit_user"
        app:layout_constraintBottom_toBottomOf="@id/img_edit_user"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/tv_mail"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_user"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Email:"
        android:textSize="20dp"
        android:textColor="@color/dark_white"
        android:layout_margin="20dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/tv_phoneNum"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_mail"
        app:layout_constraintTop_toBottomOf="@id/tv_mail"
        android:text="Số điên thoại:"
        android:textSize="20dp"
        android:textColor="@color/dark_white"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_phoneNum"
        app:layout_constraintLeft_toLeftOf="@id/tv_phoneNum"
        android:text="Địa chỉ:"
        android:textSize="20dp"
        android:textColor="@color/dark_white"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        />
    <Button
        android:id="@+id/btn_update_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_user"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/border_btn_sign_1st_screen"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:backgroundTint="@color/dark_white"
        android:textColor="@color/purple_800"
        android:text="Đổi mật khẩu"
        android:textStyle="bold|italic"/>










</androidx.constraintlayout.widget.ConstraintLayout>