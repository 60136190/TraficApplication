<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_item_function"
    android:id="@+id/item_trick"
    android:layout_margin="7dp">
    <TextView
        android:id="@+id/tv_tittle_item_trick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/arrow_down"
        android:textColor="@color/purple_800"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        />
    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        app:layout_constraintTop_toTopOf="@id/tv_tittle_item_trick"
        app:layout_constraintBottom_toBottomOf="@id/tv_tittle_item_trick"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/tv_detail_item_trick"
        app:layout_constraintTop_toBottomOf="@id/tv_tittle_item_trick"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/grey"/>


</androidx.constraintlayout.widget.ConstraintLayout>