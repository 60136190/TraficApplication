<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.auth.PasswordUpdateActivity"
    android:background="@color/light_white"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_edit_user_pass"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:src="@color/dark_white"
        android:background="@drawable/border_avt"
        />
    <TextView
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:id="@+id/tv_user_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_edit_user_pass"
        android:textColor="@color/purple_800"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="10dp"

        android:background="@drawable/border_item_function"
        android:backgroundTint="@color/dark_white"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:inputType="textPassword"
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_user_pass"
        app:passwordToggleEnabled="true"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_up_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_btn_sign_1st_screen"
            android:backgroundTint="@color/dark_white"
            android:hint="Mật khẩu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/purple_800"
            android:textSize="18sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:inputType="textPassword"
        android:id="@+id/edt_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt_pass"
        app:passwordToggleEnabled="true"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:hint="Mật khẩu mới"
            android:textColor="@color/purple_800"
            android:backgroundTint="@color/dark_white"
            android:textStyle="bold"
            android:background="@drawable/border_btn_sign_1st_screen"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:inputType="textPassword"
        android:id="@+id/edt_confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt_new_pass"
        app:passwordToggleEnabled="true"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:hint="Nhập lại mật khẩu"
            android:textColor="@color/purple_800"
            android:backgroundTint="@color/dark_white"
            android:textStyle="bold"
            android:background="@drawable/border_btn_sign_1st_screen"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_update_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_confirm_pass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/border_btn_sign_1st_screen"
        app:backgroundTint="@color/purple_800"
        android:text="Cập nhật"
        android:textAllCaps="false"
        android:textColor="@color/dark_white"/>
    <ImageView
        android:id="@+id/img_exit_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>