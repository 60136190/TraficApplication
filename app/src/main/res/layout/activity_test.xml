<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activities.TestActivity"
    android:background="@color/dark_white">
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <androidx.recyclerview.widget.RecyclerView
          android:layout_marginTop="5dp"
          android:id="@+id/rv_test"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          />
      <Button
          android:id="@+id/btn_random_test"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textAllCaps="false"
          android:text="Tạo đề thi ngẫu nhiên"
          android:textColor="@color/dark_white"
          app:backgroundTint="@color/purple_800"
          android:background="@drawable/border_btn_sign_1st_screen"
          android:layout_marginBottom="30dp"/>

  </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>