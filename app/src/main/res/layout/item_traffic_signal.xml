<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_signal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_item_function"
    app:backgroundTint="@color/dark_white"
    android:layout_margin="1dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_signal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_signal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_item_signal"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_signal"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/img_item_signal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/purple_800"
        />



</androidx.constraintlayout.widget.ConstraintLayout>